<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="QuizApp.MainPage"
             BackgroundColor="#121212">

    <Grid>
        <ScrollView x:Name="LayoutMenu" IsVisible="True">
            <VerticalStackLayout Spacing="25" Padding="30" VerticalOptions="Center">

                <Label Text="QUIZ MASTER" 
                       FontSize="42" 
                       HorizontalOptions="Center" 
                       TextColor="#00ffcc"
                       FontAttributes="Bold"
                       CharacterSpacing="2"/>

                <Label x:Name="LblRecorde"
                       Text="🏆 Recorde: 0"
                       FontSize="20"
                       HorizontalOptions="Center"
                       TextColor="#ffcc00"
                       FontAttributes="Bold"/>

                <BoxView HeightRequest="1" Color="Gray" WidthRequest="200" Opacity="0.3"/>

                <Label Text="Escolha seu desafio:" 
                       FontSize="16" 
                       HorizontalOptions="Center" 
                       TextColor="#aaaaaa"/>

                <Button Text="🔀 MISTURADO (DESAFIO FINAL)" 
                        Clicked="OnCategoriaClicked"
                        CommandParameter="Tudo" 
                        BackgroundColor="#6200ea" 
                        TextColor="White"
                        FontAttributes="Bold"
                        CornerRadius="15"
                        HeightRequest="60"
                        Margin="0,0,0,10"/>

                <Grid ColumnDefinitions="*,*" RowDefinitions="Auto,Auto,Auto" ColumnSpacing="15" RowSpacing="15">

                    <Button Grid.Row="0" Grid.Column="0"
                            Text="🌍 Geografia" 
                            Clicked="OnCategoriaClicked"
                            CommandParameter="Geografia" 
                            BackgroundColor="#2ecc71" 
                            TextColor="White" FontAttributes="Bold" CornerRadius="15" HeightRequest="80"/>

                    <Button Grid.Row="0" Grid.Column="1"
                            Text="📜 História" 
                            Clicked="OnCategoriaClicked"
                            CommandParameter="História" 
                            BackgroundColor="#e67e22" 
                            TextColor="White" FontAttributes="Bold" CornerRadius="15" HeightRequest="80"/>

                    <Button Grid.Row="1" Grid.Column="0"
                            Text="💡 Curiosidades" 
                            Clicked="OnCategoriaClicked"
                            CommandParameter="Curiosidades" 
                            BackgroundColor="#f1c40f" 
                            TextColor="Black" FontAttributes="Bold" CornerRadius="15" HeightRequest="80"/>

                    <Button Grid.Row="1" Grid.Column="1"
                            Text="🔬 Ciência" 
                            Clicked="OnCategoriaClicked"
                            CommandParameter="Ciência" 
                            BackgroundColor="#3498db" 
                            TextColor="White" FontAttributes="Bold" CornerRadius="15" HeightRequest="80"/>

                    <Button Grid.Row="2" Grid.Column="0"
                            Text="⚽ Esportes" 
                            Clicked="OnCategoriaClicked"
                            CommandParameter="Esportes" 
                            BackgroundColor="#e74c3c" 
                            TextColor="White" FontAttributes="Bold" CornerRadius="15" HeightRequest="80"/>

                    <Button Grid.Row="2" Grid.Column="1"
                            Text="🎬 Cinema" 
                            Clicked="OnCategoriaClicked"
                            CommandParameter="Cinema" 
                            BackgroundColor="#9b59b6" 
                            TextColor="White" FontAttributes="Bold" CornerRadius="15" HeightRequest="80"/>

                </Grid>

                <Label Text="Mais temas em breve..." HorizontalOptions="Center" TextColor="#444" FontSize="12" Margin="0,20,0,0"/>

            </VerticalStackLayout>
        </ScrollView>


        <Grid x:Name="LayoutJogo"
              RowDefinitions="Auto, *, Auto"
              Padding="20"
              IsVisible="False">

            <VerticalStackLayout Grid.Row="0" Spacing="10">
                <Grid ColumnDefinitions="*, Auto">
                    <Label Text="⏱️ TEMPO" TextColor="Gray" VerticalOptions="Center"/>
                    <Label x:Name="LblPontos" Grid.Column="1" Text="0 pts" TextColor="#00ffcc" FontSize="22" FontAttributes="Bold"/>
                </Grid>
                <ProgressBar x:Name="BarraTempo" Progress="1.0" ProgressColor="#ff0055" ScaleY="4"/>
            </VerticalStackLayout>

            <VerticalStackLayout Grid.Row="1" VerticalOptions="Center" Spacing="20">

                <Frame BackgroundColor="#1f1f1f" 
                       CornerRadius="20" 
                       HasShadow="True" 
                       BorderColor="#333"
                       Padding="25">

                    <VerticalStackLayout Spacing="10">
                        <Label x:Name="LblPergunta"
                               Text="..."
                               TextColor="White"
                               FontSize="24"
                               FontAttributes="Bold"
                               HorizontalTextAlignment="Center"/>

                        <Label x:Name="LblValorPergunta"
                               Text="Vale 10 pts"
                               TextColor="#ffcc00"
                               FontSize="14"
                               FontAttributes="Italic"
                               HorizontalOptions="Center"
                               Opacity="0.8"/>
                    </VerticalStackLayout>
                </Frame>

                <Label x:Name="LblFeedback"
                       Text=""
                       HeightRequest="30"
                       HorizontalOptions="Center"
                       FontAttributes="Bold"
                       FontSize="18"/>

                <VerticalStackLayout Spacing="12">
                    <Button x:Name="BtnOp1" Clicked="OnRespostaClicked" BackgroundColor="#333" CornerRadius="15" HeightRequest="55" FontSize="16"/>
                    <Button x:Name="BtnOp2" Clicked="OnRespostaClicked" BackgroundColor="#333" CornerRadius="15" HeightRequest="55" FontSize="16"/>
                    <Button x:Name="BtnOp3" Clicked="OnRespostaClicked" BackgroundColor="#333" CornerRadius="15" HeightRequest="55" FontSize="16"/>
                    <Button x:Name="BtnOp4" Clicked="OnRespostaClicked" BackgroundColor="#333" CornerRadius="15" HeightRequest="55" FontSize="16"/>
                </VerticalStackLayout>
            </VerticalStackLayout>

            <Button Grid.Row="2"
                    Text="Cancelar Jogo"
                    Clicked="OnVoltarMenuClicked"
                    BackgroundColor="Transparent"
                    TextColor="#555"
                    Margin="0,10,0,0"/>

        </Grid>
    </Grid>

</ContentPage>